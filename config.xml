<?xml version='1.0' encoding='utf-8'?>
<widget id="io.rayner.matt.happywaiter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Happy Waiter</name>
    <description>
        Quickly and easily calculate a bill split with friends, and a tip.
    </description>
    <author email="hello@rayner.io" href="http://matt.rayner.io">
        Matthew Rayner
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <!--<allow-intent href="http://*/*" />-->
    <!--<allow-intent href="https://*/*" />-->
    <!--<allow-intent href="tel:*" />-->
    <!--<allow-intent href="sms:*" />-->
    <!--<allow-intent href="mailto:*" />-->
    <!--<allow-intent href="geo:*" />-->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
